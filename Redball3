<script>

function moveup() {
if(redball.top>0) 
{redball.top = redball.top -10;
}
else {

alert('stopit')

}
}
</script>

<script>
function movedown(){
if(redball.top<200)
{redball.top=redball.top +10;
}
else {
alert('just stop it here')
}
}
</script>

<script>
function moveleft() {
	if(redball.left>-35)
{redball.left=redball.left -10;
}
else {
alert('you got it')
 
}
}
</script>

<script>
function moveright() {
	if(redball.left<850)
{redball.left=redball.left +10; 
}
else {
alert('you got it')
}
}
</script>

